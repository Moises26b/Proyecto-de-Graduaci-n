@model List<Rol>;
@{
	ViewData["Title"] = "Roles";
}
<div class="btn-container">
	<a href="@Url.Action("Crear","Rol")" class="btn btn-success">Agregar Rol</a>
</div>

@if (Model.Count == 0)
{
	<tr style="text-align:center;">
		<td colspan="4">No hay roles disponibles en este momento.</td>
	</tr>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Nombre</th>
				<th scope="col">Descripcion</th>
				<th scope="col">Estado</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var Rol in Model)
			{
				<tr>
					<th scope="row">@Rol.IdRol</th>
					<td>@Rol.NombreRol</td>
					<td>@Rol.Descripcion</td>
					<td>@Rol.EstadoRol</td>
					<td>
						<a href="@Url.Action("Editar","Rol",new{id=Rol.IdRol})" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
						<a href="@Url.Action("Eliminar","Rol",new{id=Rol.IdRol})" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}